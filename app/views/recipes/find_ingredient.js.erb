$("#add_ingredient_dialog").html("<%= escape_javascript(render("ingredient")) %>").dialog({
	modal:true,
	show:'fade',
	hide:'fade',
	title:'<%= escape_javascript(@product.name) %>',
	height:'auto',
	width:'auto',
	resizable:false,
	draggable:false,
	closeText:'Peruuta',
	buttons: {
		"Peruuta": function() {
			$(this).dialog("close");
		},
		"Lisää": function () {
			$(this).dialog("close")
			$("#new_ingredient").submit();
		}
	}
	});

