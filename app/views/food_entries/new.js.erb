if ($("#new_food_entry_dialog").length == 0) {
	$("<div/>", {
		id: "new_food_entry_dialog"
	}).appendTo("body");
}

$("#new_food_entry_dialog").html("<%= escape_javascript(render("form")) %>").dialog({
	modal:true,
	show:'fade',
	hide:'fade',
	title:'Lisää syöminen (<%= escape_javascript(@consumable.name) %>)',
	height:'auto',
	width:'auto',
	resizable:false,
	draggable:false,
	closeText:'Peruuta',
	buttons: {
		"Peruuta": function() {
			$(this).dialog("close");
		},
		"Lisää": function () {
			$(this).dialog("close")
			$("#new_food_entry").submit();
		}
	}
	});